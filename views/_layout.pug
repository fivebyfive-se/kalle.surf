include mixins/_classes.pug
include mixins/_grid.pug
include mixins/_remixicon.pug
include mixins/_scripts.pug
include mixins/_navigation.pug

doctype html
html(lang=lang, data-theme=theme)
    head
        meta(charset="utf8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width,initial-scale=1")
        title kalle.surf
        block head
        link(rel='stylesheet', href='/css/critical.css')
    body
        header
            h1.header
                .header__logo
                    include partials/logo.svg.pug
                .header__title kalle.surf
            nav.nav
                +nav-link('#about', __('menu.about'), 'user-smile-line')
                +nav-link('#shop', __('menu.shop'), 'shopping-cart-line')
                +nav-link('https://fivebyfive.se/', __('menu.5x5'), 'building-4-line', 'highlight')(target='_blank', rel='noopener nofollow')

        article
            main
                block content

        link(rel='stylesheet', href='//cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css')
        link(href="https://fonts.googleapis.com/css2?family=Mulish:wght@333;666&display=swap", rel="stylesheet")

        link(rel='stylesheet', href='/css/non-critical.css')      


        +renderScripts()
        
        block styles
        block scripts